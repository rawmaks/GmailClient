<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clr="clr-namespace:System;assembly=System.Runtime"
                    xmlns:local="clr-namespace:PresentationLayer.Resources">

    <!-- TODO: Margins and borders from sizes -->
    
    <!-- Margins -->
    <Thickness x:Key="FABMargin" Left="0" Right="30" Top="0" Bottom="30"/>
    <Thickness x:Key="MailItemButonMargin" Left="10" Right="10" Top="10" Bottom="10"/>

    <!-- Borders -->
    <Thickness x:Key="RightBorder" Left="0" Right="1" Top="0" Bottom="0"/>
    <Thickness x:Key="BottomBorder" Left="0" Right="0" Top="0" Bottom="1"/>

    <!-- Sizes -->
    <clr:Double x:Key="FABSize">60</clr:Double>
    <clr:Double x:Key="MailItemButonSize">40</clr:Double>
    <clr:Double x:Key="HeaderButtonSize">40</clr:Double>
    <clr:Int32 x:Key="BorderSize">1</clr:Int32>

    <!-- GridLengths -->
    <GridLength x:Key="SizeLargeCell">340</GridLength>

</ResourceDictionary>